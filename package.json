{
  "name": "starter",
  "scripts": {
    "bootstrap": "lerna bootstrap",
    "bundle": "run-s clean bootstrap fix build test",
    "build": "lerna run build",
    "clean": "lerna run clean && lerna clean -y",
    "commit": "git-cz",
    "fix": "run-s fix:*",
    "fix:code": "yarn lint:code --fix",
    "fix:svg": "babel-node scripts/format-svg.js",
    "fix:other": "yarn prettier --write",
    "hooks:uninstall": "node node_modules/husky/husky.js uninstall",
    "hooks:install": "node node_modules/husky/husky.js install",
    "lint": "run-p --continue-on-error lint:*",
    "lint:code": "eslint --ignore-path .gitignore --ignore-path .prettierignore --ext .js,.jsx,.ts,.tsx .",
    "lint:other": "yarn prettier --check",
    "prebootstrap": "yarn",
    "prettier": "prettier \"**/*.{md,css,scss,yaml,yml}\"",
    "prerelease": "yarn run bundle",
    "test": "lerna run test --stream",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s && git add CHANGELOG.md",
    "watch": "lerna run watch --parallel --concurrency 999"
  },
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "license": "MIT",
  "engines": {
    "node": ">=10.17.0"
  },
  "lint-staged": {
    "*.{js,jsx,ts,tsx}": [
      "yarn fix:code",
      "git add"
    ],
    "*.{md,css,scss,yaml,yml}": [
      "yarn fix:other",
      "git add"
    ],
    "*.svg": [
      "yarn fix:svg",
      "git add"
    ]
  },
  "browserslist": [
    "last 2 Chrome versions",
    "last 2 Opera versions",
    "last 2 Firefox versions",
    "last 2 Edge versions",
    "last 2 Safari versions",
    "last 2 iOS versions",
    "last 2 ChromeAndroid versions"
  ],
  "devDependencies": {
    "@babel/core": "7.7.5",
    "@babel/plugin-proposal-nullish-coalescing-operator": "^7.7.4",
    "@babel/plugin-proposal-optional-chaining": "^7.7.5",
    "@babel/preset-typescript": "^7.7.4",
    "@commitlint/cli": "^8.2.0",
    "@commitlint/config-conventional": "^8.2.0",
    "@commitlint/config-lerna-scopes": "^8.2.0",
    "@types/fs-extra": "^8.0.1",
    "@types/jest": "^24.0.23",
    "@types/lodash": "^4.14.149",
    "@types/node": "^12.12.17",
    "@types/prettier": "^1.19.0",
    "@types/react": "^16.9.16",
    "@types/react-dev-utils": "^9.0.1",
    "@types/react-dom": "^16.9.4",
    "@typescript-eslint/eslint-plugin": "^2.11.0",
    "@typescript-eslint/parser": "^2.11.0",
    "babel-eslint": "^10.0.3",
    "babel-plugin-lodash": "^3.3.4",
    "babel-preset-react-app": "^9.1.0",
    "commitizen": "^4.0.3",
    "cross-env": "^6.0.3",
    "eslint": "^6.7.2",
    "eslint-config-google": "^0.14.0",
    "eslint-config-prettier": "^6.7.0",
    "eslint-plugin-header": "^3.0.0",
    "eslint-plugin-import": "^2.19.1",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.1",
    "eslint-plugin-react": "^7.17.0",
    "eslint-plugin-react-hooks": "^2.3.0",
    "glob": "^7.1.6",
    "husky": "3.1.0",
    "jest": "^24.9.0",
    "lerna": "^3.19.0",
    "lerna-changelog": "^0.8.3",
    "lint-staged": "^9.5.0",
    "npm-run-all": "4.1.5",
    "prettier": "^1.19.1",
    "react": "^16.12.0",
    "react-dom": "^16.12.0",
    "rimraf": "^3.0.0",
    "standard-version": "^7.0.1",
    "svgo": "1.3.2",
    "ts-jest": "^24.2.0",
    "typescript": "^3.7.3"
  },
  "config": {
    "commitizen": {
      "path": "./node_modules/cz-conventional-changelog"
    }
  }
}
